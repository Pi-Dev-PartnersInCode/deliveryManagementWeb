{% block main %}

    <div class="content">
    <div class="animated fadeIn">
    <div class="row">


    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <strong class="card-title">Mes livraisons</strong>
            </div>




            <div class="card-body">
                <div >
                    <form class="form-inline md-form form-sm mt-0" action="{{ path('table_content') }}" method="get">
                        <label for="filter"></label>
                        <input style="width: 100%;" name="filter" class="form-control" id="listSearch" type="text" placeholder="Recherche Livraison..">
                    </form>
                </div>
                <table id="bootstrap-data-table" class="table table-striped table-bordered">
                    <thead>
                    <tr>
                        <th>Livreur Id</th>
                        <th>Livraison Add</th>
                        <th>Livraison Produits</th>
                        <th>Montant</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    {% for li in livraisons %}
                        <tbody>
                        <tr>
                            <td scope="row"><a href="{{ path('livraison_show1', { 'id': li.id }) }}">{{ li.id }}</a></td>

                            <td>{{ li.livreurId }}</td>
                            <td>{{ li.livraisonAdresse }}</td>
                            <td>{{ li.livraisonProduits }}</td>
                            <td>{{ li.montantTotal }} <h6>TND</h6></td>
                            <td>
                                <ul style="list-style: none;">
                                    <li>

                                        <a class="btn btn-primary btn-lg" href="{{ path('livraison_edit', { 'id': li.id }) }}">edit</a>
                                    </li>

                                </ul>
                            </td>
                        </tr>

                        </tbody>
                    {% endfor %}
                </table>
                <div class="navigation text-center" >
                </div>
            </div>
        </div>
    </div>

    <a class="btn btn-outline-dark" style="position: relative;left: 43%;"href="{{ path('livraison_new') }}">Ajouter Livraison</a>
{% endblock %}